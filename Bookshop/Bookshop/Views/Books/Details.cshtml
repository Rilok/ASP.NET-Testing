@using Bookshop.Ultility
@model Bookshop.Models.Book
@{
    ViewData["Title"] = "Szczegóły";
}

<br />
<h2>Szczegóły książki</h2>
<hr />

    <div class="form-border">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="name" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="name" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="genre" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="genre" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="year" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="year" disabled class="form-control" />
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            @if (User.IsInRole(StaticDetails.AdminUser))
            {
                <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-sm btn-primary">Edytuj</a>
            }
            <a asp-action="Index" class="btn btn-sm btn-success">Powrót</a>
        </div>
    </div>
