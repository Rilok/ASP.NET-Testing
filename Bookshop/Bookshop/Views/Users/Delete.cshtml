@model ApplicationUser
@{
    ViewData["Title"] = "Usuwanie";
}

<br />
<h2>Usunięcie użytkownika</h2>
<hr />

<form asp-action="Delete">
    <div class="form-border">
        <input type="hidden" asp-for="Id" />
        <fieldset disabled>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Name" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Surname" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Surname" class="form-control" />
                    </div>
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="Usuń użytkownika" class="btn btn-sm btn-danger" />
            <a asp-action="Index" class="btn btn-sm btn-success">Powrót</a>
        </div>
    </div>
</form>
