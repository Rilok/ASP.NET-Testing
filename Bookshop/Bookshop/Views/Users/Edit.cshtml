@model ApplicationUser
@{
    ViewData["Title"] = "Edycja";
}

<br />
<h2>Edycja użytkownika</h2>
<hr />

<form asp-action="Edit">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Surname" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Surname" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Aktualizuj" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-success">Powrót</a>
        </div>
    </div>
</form>


