@model RegisterViewModel
@using Bookshop.Ultility
@{
    ViewData["Title"] = "Rejestracja";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Utwórz nowe konto.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Name" class="custom-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="custom-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="custom-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="custom-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="custom-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
           
           
                <div class="form-group">
                    <label asp-for="isAdmin" class="custom-label"></label>
                    <input asp-for="isAdmin" class="checkbox" />
                </div>
            
            @if (User.IsInRole(StaticDetails.AdminUser))
            {
                <button type="submit" class="btn btn-default">Dodaj użytkownika</button>
            }
            else
            {
                <button type="submit" class="btn btn-default">Zarejestruj</button>
            }
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
